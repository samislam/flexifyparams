{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES2017", "DOM"],
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declarationDir": "./@types"
  },
  "exclude": ["./@types"]
}
